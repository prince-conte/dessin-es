header.site-header
    .container
        .site-header__top-line

            .site-header__top-line-item.is-mobile
                .site-header__burger.js-open-mobile-menu
                    a.icon-button-big(href='#')
                        i.mdi.mdi-menu
                        i.mdi.mdi-close

            .site-header__top-line-item
                form.site-header__search-block
                    button.icon-button-big.icon-button-big--search
                        i

                    .site-header__search-block-input
                        input(type='search' placeholder='Поиск по сайту')


            .site-header__top-line-item.site-header__top-line-item--logo-box
                a(href='#')
                    img(src='img/logo.jpg' alt='bubble')

            .site-header__top-line-item
                .site-header__basket
                    a.icon-button-big(href='#' data-order='Корзина: 400 Р' data-order-quantity='8')
                        i.mdi.mdi-cart

