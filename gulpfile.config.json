{
  "paths": {
    "src": {
      "views": {
        "build": "src/app/views/*.pug",
        "watch": "src/app/views/**/*.pug"
      },
      "styles": {
        "build": "src/app/assets/stylesheets/application.scss",
        "watch": "src/app/assets/stylesheets/**/*.scss"
      },
      "modernizr": "src/app/assets/javascripts/vendor/modernizr.js",
      "vendorScripts": [
        "src/app/assets/vendor/jquery/dist/jquery.js",
        "src/app/assets/vendor/redactor-js/redactor/redactor.js",
        "src/app/assets/vendor/svg4everybody/dist/svg4everybody.js",
        "src/app/assets/vendor/slick-carousel/slick/slick.js",
        "src/app/assets/vendor/slick-carousel/slick/slick.js",
        "src/app/assets/javascripts/vendor/jquery.smoothscroll.js",
        "src/app/assets/vendor/magnific-popup/dist/jquery.magnific-popup.js",
        "src/app/assets/vendor/jquery-ui/jquery-ui.js"
      ],
      "scripts": {
        "build": [
          "src/app/assets/javascripts/config.babel.js",
          "src/app/assets/javascripts/functions.babel.js",
          "src/app/assets/javascripts/variables.babel.js",
          "src/app/assets/javascripts/utilities.babel.js",
          "src/app/assets/javascripts/components/icons.babel.js",
          "src/app/assets/javascripts/components/mobile-menu-init.js",
          "src/app/assets/javascripts/components/main-mobile-init.js",
          "src/app/assets/javascripts/components/menu_slider.js",
          "src/app/assets/javascripts/components/in_slider.js",
          "src/app/assets/javascripts/components/filter_slider.js",
          "src/app/assets/javascripts/components/product_filter.js",
          "src/app/assets/javascripts/components/news_promo_slider.js",
          "src/app/assets/javascripts/components/body_fade_in.js",
          "src/app/assets/javascripts/components/card_slider.js",
          "src/app/assets/javascripts/components/content_video.js",
          "src/app/assets/javascripts/components/basket-spinner.js",
          "src/app/assets/javascripts/components/select-menu.js",
          "src/app/assets/javascripts/components/private-sale-slider.js",
          "src/app/assets/javascripts/components/history-drop.js",
          "src/app/assets/javascripts/components/new-magazine-slider.js",
          "src/app/assets/javascripts/components/open-links.js",
          "src/app/assets/javascripts/components/shops_hide_txt.js",
          "src/app/assets/javascripts/components/information-dropdown.js",
          "src/app/assets/javascripts/components/shares-slider.js",
          "src/app/assets/javascripts/components/popup.js",
          "src/app/assets/javascripts/components/show-password.js",
          "src/app/assets/javascripts/components/redactor.js",
          "src/app/assets/javascripts/components/blog-slider.js",
          "src/app/assets/javascripts/components/delivery-point-hide.js"

        ],
        "watch": "src/app/assets/javascripts/**/*.js"
      },
      "vendorFonts": [

      ],
      "fonts": "src/app/assets/fonts/**/*.{woff,woff2}",
      "images": "src/app/assets/images/**/*.{gif,jpg,jpeg,png,svg}",
      "files": "src/public/**/*"
    },
    "dist": {
      "root": "dist/",
      "css": "dist/css/",
      "js": "dist/js/",
      "fonts": "dist/fonts/",
      "img": "dist/img/"
    }
  },
  "options": {
    "pug": {
      "pretty": true
    },
    "sass": {
      "outputStyle": "expanded"
    },
    "babel": {
      "presets": ["env"]
    },
    "modernizr": {
      "classPrefix": "mod_",
      "options": [
        "mq",
        "setClasses"
      ],
      "feature-detects": [
        "touchevents"
      ]
    },
    "imagemin": {
      "optimizationLevel": 5
    }
  }
}
